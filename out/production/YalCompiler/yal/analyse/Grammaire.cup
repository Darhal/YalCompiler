/* ------------Declaration of Terminals and Non Terminals Section----------- */
   
/* Terminals (tokens returned by the scanner).  */

terminal Symbol    PROGRAMME, DEBUT, FIN, POINTVIRGULE, ECRIRE, TYPE, EQUAL;
terminal String    IDF, CSTENTIERE ;

/* Non terminals used in the grammar section.  */

non terminal ArbreAbstrait PROG, LINST, INST ;
non terminal Expression EXP ;
non terminal DECL_LIST, DECL_VAR;

/* ----------------------------Grammar Section-------------------- */
 
start with PROG ;

PROG    ::=     PROGRAMME  IDF  DEBUT DECL_LIST LINST:li  FIN
                {:
                    RESULT = li ;
                :}
                ;

DECL_LIST ::=   DECL_LIST DECL_VAR:d {::} | DECL_VAR:d {::};

DECL_VAR ::=    TYPE IDF:idf POINTVIRGULE
                {:
                    TDS.Instance().AddEntry(new VariableEntry(idf), new IntSymbol());
                :}
                ;

LINST   ::=     LINST:li  INST:i
                {: ((BlocDInstructions)li).ajouter(i);
                   RESULT = li ; :}
        |
                INST:i
                {: BlocDInstructions b = new BlocDInstructions(ileft + 1);
                   b.ajouter(i);
                   RESULT = b; :}
                ;

INST    ::=     IDF:idf EQUAL EXP:e POINTVIRGULE
                {:  Variable var = new Variable(new VariableEntry(idf), idfleft + 1);
                    RESULT = new Affectation(var, e, eleft + 1); :}
        |
                ECRIRE EXP:e POINTVIRGULE
                {: RESULT = new Ecrire(e, eleft + 1) ; :}
                ;
    
EXP    ::=     IDF:idf
                {: RESULT = new Variable(new VariableEntry(idf), idfleft + 1); :}
       |
               CSTENTIERE:c
               {: RESULT = new ConstanteEntiere(c, cleft + 1); :}
                ;
